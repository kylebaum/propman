<div class="page-header">
  <h1>
    Managers
    <a href="/managers/new" class="btn btn-lg btn-success">New Manager</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>User</th>
        <th>Actions</th>
      </tr>

      <% @managers.each do |manager| %>
      <tr>
        <td><%= manager.user_id %></td>
        <td>
          <a href="/managers/<%= manager.id %>" class="btn btn-primary">Show</a>
          <a href="/managers/<%= manager.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_manager/<%= manager.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
